    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                "--config",
                "config/config.json"
            ],
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch OAuth Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                "--config",
                "config/oauth.json"
            ],
            "program": "${workspaceFolder}/oauth",
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        }
    ]
}